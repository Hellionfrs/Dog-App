<h1 class="text-center"><%= pluralize(@posts.count, "Result")%></h1>


<div class="container ">
  <table class="table table-light table-hover table-bordered border-dark">
    <thead class="table table-dark">
      <tr> 
        
        <th><%= sort_link(@query, :title, "Title", default_order: :asc, class:"link-light") %></th>
        <th><%= sort_link(@query, :body, "Description", class:"link-light") %></th>
        <th><%= sort_link(@query, :user_name, "User", class:"link-light")%></th>
        <%# created_at %>
      </tr>

    </thead>
    <tbody>
      <% @posts.each do |post|%>
      <tr>
        <td><%= link_to post.title, post, class:"link-dark"%></td>
        <td><%= post.body.truncate_words(25) %></td>
        <td><%= link_to  post.user.name, post.user , class:"link-dark"%></td>
      </tr>
      <% end%>
    </tbody>
  </table>
</div>