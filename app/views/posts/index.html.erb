<p style="color: green"><%= notice %></p>



<div class = "container" id="posts">

<h1>Posts</h1>

<%= link_to "Create new Post!", new_post_path, class:"btn btn-secondary" %>
<br/>
  <% @posts.each do |post| %>
  
    <%= render post %>
    <p>
      <%= link_to "Show this post", post, class:"btn btn-secondary" %>
    </p>
  
  <% end %>
  
</div>


