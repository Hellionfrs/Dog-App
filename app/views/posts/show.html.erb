<div class="container mx-auto px-5">
  <%= render partial: "posts/post", locals: {post: @post, is_square: true}%>
  <% if current_user == @post.user%>
    <div class="btn-group float-end">
      <%= link_to "Edit this post", edit_post_path(@post), class:"btn btn-secondary" %> 
      
      <%= button_to "Destroy this post", @post, method: :delete, class:"btn btn-danger" %>
    </div>
    
  <% end %>
  
  <%= link_to "Back to posts", posts_path, class:"btn btn-dark"%>

  <br />
  <br />
  <%= render 'comments/form',
    post: @post,
    comment: @post.comments.build,
    submit_label: "Reply"%>
    <br/>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', 
      post: @post,
      comment: comment %>
    <br/>
  <% end %>
  
</div>

